  "devDependencies": {
    "@prisma/client": "^6.15.0",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "jest": "^29.0.0",
    "prisma": "^6.15.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
